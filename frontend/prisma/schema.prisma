datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  name              String
  password          String
  role              String
  verificationCode  String?  // Nullable since it will be null after verification
  isVerified        Boolean  @default(false)
}
